<!-- product-nav -->

<div class="product-easy">
    <div class="container">

        <script src="js/easyResponsiveTabs.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                    width: 'auto', //auto or any width like 600px
                    fit: true   // 100% fit in a container
                });
            });

        </script>
        <div class="sap_tabs">
            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <ul class="resp-tabs-list">
                    <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Sản Phẩm Nổi Bật</span></li>
                    <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Sản Phẩm Mới Nhất </span></li>
                    <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span>Sản Phẩm Đặt Biệt</span></li>
                </ul>
                <div class="resp-tabs-container">
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                        @foreach (var item in Model.FeaturedProducts)
                        {
                            var url = $"/{item.Id}";
                            <div class="col-md-3 product-men">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img style="width:250px;height:300px" src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Name" /></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Xem Ngay</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">Hot</span>
                                    </div>
                                    <div class="item-info-product ">
                                        <h4>@item.Name</h4>
                                        <div class="info-product-price">
                                            <span class="item_price">@item.OriginalPrice</span><br>
                                            <del>@item.Price</del>
                                        </div>
                                        <a href="#" data-id="@item.Id" class="item_add single-item hvr-outline-out button2">Thêm vào giỏ hàng</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                        @foreach (var item in Model.LatestProducts)
                        {
                            var url = $"/{item.Id}";
                            <div class="col-md-3 product-men">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img style="width:250px;height:300px" src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Name" /></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Xem Ngay</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">Mới</span>

                                    </div>
                                    <div class="item-info-product ">
                                        <h4>@item.Name</h4>
                                        <div class="info-product-price">
                                            <span class="item_price">@item.OriginalPrice</span><br>
                                            <del>@item.Price</del>
                                        </div>
                                        <a href="#" data-id="@item.Id" class="item_add single-item hvr-outline-out button2">Thêm vào giò hàng</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                        @foreach (var item in Model.SpecialProducts)
                        {
                            var url = $"/{item.Id}";
                            <div class="col-md-3 product-men">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <a href="@url"><img style="width:250px;height:300px" src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Name" /></a>
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@url" class="link-product-add-cart">Xem Ngay</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">WoW</span>

                                    </div>
                                    <div class="item-info-product ">
                                        <h4>@item.Name</h4>
                                        <div class="info-product-price">
                                            <span class="item_price">@item.OriginalPrice</span><br>
                                            <del>@item.Price</del>
                                        </div>
                                        <a href="#" data-id="@item.Id" class="item_add single-item hvr-outline-out button2">Thêm vào giỏ hàng</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
