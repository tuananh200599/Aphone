
@model Aphone.ViewModel.Users.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-info">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body modal-spa">
                <div class="login-grids">
                    <div class="login">
                        <div class="login-right">
                            <h3>Đăng Nhập</h3>
                            <form action="/Account/Login" method="post">
                                <div class="sign-in">
                                    <h4>Tên Đăng Nhập :</h4>
                                    <input type="text" asp-for="UserName" placeholder="Tên Đăng Nhập">
                                    <span asp-validation-for="UserName" class="text-error"></span>
                                </div>
                                <div class="sign-in">
                                    <h4>Mật Khẩu :</h4>
                                    <input type="password" asp-for="Password" placeholder="Mật Khẩu">
                                    <span asp-validation-for="Password" class="text-error"></span>
                                    <a href="#">Quên Mật Khẩu</a>
                                </div>
                                <div class="single-bottom">
                                    <input type="checkbox" id="brand" value="">
                                    <label for="brand"><span></span>Nhớ Mật Khẩu</label>
                                </div>
                                <div class="sign-in">
                                    <button type="submit" class="btn">Đăng Nhập</button>
                                </div>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

