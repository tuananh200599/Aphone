
@model Aphone.ViewModel.Users.LoginRequest
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng Nhập</title>
    <link href="~/lib/bootstrap/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-warning">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng Nhập</h3></div>
                                <div class="card-body">
                                    <form action="/Account/Login" method="post">
                                        <div class="form-group">
                                            <label class="small mb-1">Tên Tài Khoản</label>
                                            <input class="form-control py-4" asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
                                            <span asp-validation-for="UserName" class="text-error" style="color:red"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1">Mật Khẩu</label>
                                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
                                            <span asp-validation-for="Password" class="text-error" style="color:red"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                                <label class="custom-control-label">Nhớ Mật Khẩu</label>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <form action="/Account/Register" method="post">
                                                <div class="controls">
                                                    <a href="/Account/Register" class="btn btn-warning">Tạo Tài Khoản</a>
                                                </div>
                                            </form>
                                            <button class="btn btn-warning" type="submit">Đăng Nhập</button>
                                        </div>
                                    </form>
                                   
                                </div>

                            </div>
                        </div>
                    </div>
                </div>      
             </main>
            </div>
        </div>
</body>
</html>

