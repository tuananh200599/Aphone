@model ProductCategoryViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = Model.Category.Name + (Model.Products.PageIndex == 1 ? "" : " - " + " " + Model.Products.PageIndex);
    ViewData["Description"] = Model.Category.Name + (Model.Products.PageIndex == 1 ? "" : " - " + " " + Model.Products.PageIndex);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style=" color: black;padding-top: 30px;padding-bottom: 30px;text-align: center;background-color: #FDA30E">
    <h1>Điện thoại @Model.Category.Name chính hãng</h1>
</div>

<div class="men-wear">
    <div class="container">
        <div class="col-md-3 products-left" style=" padding-top:27px">
            @await Component.InvokeAsync("SideBar")
            <div class="clearfix"></div>
        </div>
        <div class="col-md-9 products-right">
            <div class="single-pro">
                @for (int i = 0; i < Model.Products.Items.Count; i++)
                {
                    var item = Model.Products.Items[i];
                    <div class="col-md-4 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                <a href="/@item.Id"><img style="width:250px;height:300px" src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Name" /></a>
                                <div class="men-cart-pro">
                                    <div class="inner-men-cart-pro">
                                        <a href="/@item.Id" class="link-product-add-cart">Xem Ngay</a>
                                    </div>
                                </div>
                            </div>
                            <div class="item-info-product ">
                                <h4>@item.Name</h4>
                                <div class="info-product-price">
                                    <span class="item_price">@item.OriginalPrice</span>vnđ<br>
                                    <del>@item.Price</del>
                                </div>
                                <a href="#" data-id="@item.Id" class="item_add single-item hvr-outline-out button2">Thêm vào giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>